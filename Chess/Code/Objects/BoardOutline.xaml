<UserControl
    x:Class="Chess.BoardOutline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Chess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <Rectangle VerticalAlignment="Stretch" Fill="Black" Opacity="0.1"/>
        <Image x:Name="SelectedClick" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/Selected_Click.png" Visibility="Collapsed" Stretch="Fill"/>
        <Image x:Name="SelectedHover" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/Selected_Hover.png" Visibility="Collapsed" Stretch="Fill"/>
        <Image x:Name="SelectedPossible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/Selected_Possible.png" Visibility="Collapsed" Stretch="Fill"/>
        <Image x:Name="SelectedPossibleClick" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/Selected_PossibleClick.png" Visibility="Collapsed" Stretch="Fill"/>
        <Image x:Name="SelectedPossibleHover" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/Selected_PossibleHover.png" Visibility="Collapsed" Stretch="Fill"/>


    </Grid>
</UserControl>
